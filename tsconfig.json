    "compilerOptions": {
      "target": "ES2022",
      "module": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "moduleResolution": "Node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
